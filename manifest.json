{
    "name": "Title URL Clipboarad",
    "version": "1.0.1",
    "description": "Copy page title and URL just one click to your clipboad.",
    "permissions": [
        "tabs",
        "idle"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/clipboard16.png",
            "32": "images/clipboard32.png",
            "48": "images/clipboard48.png",
            "128": "images/clipboard128.png"
        }
    },
    "icons": {
        "16": "images/clipboard16.png",
        "32": "images/clipboard32.png",
        "48": "images/clipboard48.png",
        "128": "images/clipboard128.png"
    },
    "manifest_version": 2
}

